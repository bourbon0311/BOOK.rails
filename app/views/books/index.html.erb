<h1><strong>Books</strong></h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>body</th>
        <tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>
				<p><%= book.title %></p>
			</td>
			<td>
				<p><%= book.body %></p>
			</td>
		<td>
			<%= link_to 'show',book_path(book.id) %>
			<%= link_to 'edit',edit_book_path(book.id) %>
			<%= link_to "destroy" , book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %>
		</td>
	</tr>
	<% end %>
    </tbody>
</table>



  <h2>New Books</h2>
    <%= form_for @book do |f| %>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>個のerrorがあります<br>

        <% @book.errors.full_messages.each do |msg| %>
        <%= msg %><br>
        <% end %>
        <% end %>

    <h5>Title</h5>
    <%= f.text_field :title %>

    <h5>Body</h5>
    <%= f.text_area :body %>

    <h4>
    <%= f.submit 'Create Book' %>
    </h4>
    <% end %>